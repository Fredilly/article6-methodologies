{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["audit_hashes", "references"],
  "properties": {
    "audit_hashes": {
      "type": "object",
      "required": ["sections_json_sha256", "rules_json_sha256"],
      "properties": {
        "sections_json_sha256": {"type": "string"},
        "rules_json_sha256": {"type": "string"}
      },
      "additionalProperties": false
    },
    "references": {
      "type": "object",
      "required": ["tools"],
      "properties": {
        "tools": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["path", "sha256", "kind"],
            "properties": {
              "path": {"type": "string"},
              "sha256": {"type": "string"},
              "kind": {"type": "string"}
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
