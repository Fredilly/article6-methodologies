{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "items": {
    "additionalProperties": false,
    "properties": {
      "id": {
        "pattern": "^[A-Za-z0-9]+\\.[A-Za-z0-9]+\\.[A-Za-z0-9-]+\\.[vV][0-9][A-Za-z0-9\\.-]*\\.R-\\d+(?:-\\d+)*-\\d{4}$",
        "type": "string"
      },
      "inputs": {
        "items": {
          "additionalProperties": false,
          "properties": {
            "choices": {
              "items": {},
              "type": "array"
            },
            "default": {},
            "name": {
              "minLength": 1,
              "type": "string"
            },
            "nullable": {
              "type": "boolean"
            },
            "source": {
              "type": "string"
            },
            "unit": {
              "type": "string"
            }
          },
          "required": [
            "name"
          ],
          "type": "object"
        },
        "type": "array"
      },
      "logic": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object"
          }
        ]
      },
      "notes": {
        "type": "string"
      },
      "provenance": {
        "additionalProperties": false,
        "properties": {
          "source_hash": {
            "pattern": "^[a-f0-9]{64}$",
            "type": "string"
          },
          "source_ref": {
            "type": "string"
          }
        },
        "type": "object"
      },
      "refs": {
        "additionalProperties": false,
        "properties": {
          "lines": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "sections": {
            "items": {
              "pattern": "^S-\\d+(?:-\\d+)*$",
              "type": "string"
            },
            "minItems": 1,
            "type": "array"
          },
          "tools": {
            "items": {
              "pattern": "^[A-Za-z0-9\\-/]+@v[0-9][A-Za-z0-9\\.-]*$",
              "type": "string"
            },
            "type": "array"
          }
        },
        "required": [
          "sections"
        ],
        "type": "object"
      },
      "summary": {
        "minLength": 1,
        "type": "string"
      },
      "tags": {
        "items": {
          "type": "string"
        },
        "type": "array"
      },
      "type": {
        "enum": [
          "eligibility",
          "parameter",
          "equation",
          "calc",
          "monitoring",
          "leakage",
          "uncertainty",
          "reporting"
        ],
        "type": "string"
      },
      "when": {
        "items": {
          "minLength": 1,
          "type": "string"
        },
        "type": "array"
      }
    },
    "required": [
      "id",
      "type",
      "refs",
      "summary"
    ],
    "type": "object"
  },
  "title": "Rules (Rich) v1",
  "type": "array"
}
