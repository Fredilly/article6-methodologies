{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "kind",
    "publisher",
    "id",
    "version",
    "status",
    "effective_from",
    "effective_to",
    "provenance",
    "pointers",
    "tools",
    "audit_hashes"
  ],
  "properties": {
    "kind": { "const": "methodology" },
    "publisher": { "type": "string" },
    "id": { "type": "string" },
    "version": { "type": "string" },
    "status": { "enum": ["superseded"] },
    "effective_from": { "type": "string" },
    "effective_to": { "type": "string" },
    "provenance": {
      "type": "object",
      "required": ["source_url", "methodology_page", "version_number"],
      "properties": {
        "source_url": { "type": "string" },
        "methodology_page": { "type": "string" },
        "version_number": { "type": "string" }
      },
      "additionalProperties": true
    },
    "pointers": {
      "type": "object",
      "required": ["active_successor"],
      "properties": {
        "active_successor": { "type": "string" }
      },
      "additionalProperties": true
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["pointer"],
        "properties": {
          "pointer": { "type": "string" },
          "doc": { "type": ["string", "null"] },
          "kind": { "type": ["string", "null"] },
          "sha256": { "type": ["string", "null"] },
          "size": { "type": ["integer", "null"] }
        },
        "additionalProperties": false
      }
    },
    "audit_hashes": {
      "type": "object",
      "required": ["source_pdf_sha256"],
      "properties": {
        "source_pdf_sha256": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
