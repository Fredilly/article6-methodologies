{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tool OpenAPI",
  "type": "object",
  "required": ["openapi", "info", "paths"],
  "properties": {
    "openapi": {
      "type": "string",
      "pattern": "^3\\.\\d+\\.\\d+$"
    },
    "info": {
      "type": "object",
      "required": ["title", "version"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 3
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "paths": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^/": {
          "$ref": "#/definitions/pathItem"
        }
      },
      "additionalProperties": false
    },
    "components": {
      "type": "object"
    },
    "security": {
      "type": "array"
    }
  },
  "additionalProperties": true,
  "definitions": {
    "pathItem": {
      "type": "object",
      "properties": {
        "get": { "$ref": "#/definitions/operation" },
        "put": { "$ref": "#/definitions/operation" },
        "post": { "$ref": "#/definitions/operation" },
        "delete": { "$ref": "#/definitions/operation" },
        "patch": { "$ref": "#/definitions/operation" },
        "options": { "$ref": "#/definitions/operation" },
        "head": { "$ref": "#/definitions/operation" },
        "trace": { "$ref": "#/definitions/operation" },
        "parameters": {
          "type": "array",
          "items": { "$ref": "#/definitions/parameter" }
        }
      },
      "additionalProperties": false
    },
    "operation": {
      "type": "object",
      "required": ["operationId", "summary", "description", "responses"],
      "properties": {
        "operationId": {
          "type": "string",
          "pattern": "^[A-Za-z0-9._-]{1,128}$"
        },
        "summary": {
          "type": "string",
          "minLength": 5
        },
        "description": {
          "type": "string",
          "minLength": 5
        },
        "requestBody": {
          "$ref": "#/definitions/requestBody"
        },
        "responses": {
          "$ref": "#/definitions/responses"
        },
        "parameters": {
          "type": "array",
          "items": { "$ref": "#/definitions/parameter" }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": true
    },
    "responses": {
      "type": "object",
      "minProperties": 1,
      "required": ["200"],
      "properties": {
        "200": { "$ref": "#/definitions/response" }
      },
      "patternProperties": {
        "^[45]\\d{2}$": { "$ref": "#/definitions/response" }
      },
      "additionalProperties": true
    },
    "response": {
      "type": "object",
      "required": ["description"],
      "properties": {
        "description": {
          "type": "string",
          "minLength": 5
        },
        "content": {
          "type": "object",
          "properties": {
            "application/json": {
              "$ref": "#/definitions/mediaType"
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "requestBody": {
      "type": "object",
      "required": ["content"],
      "properties": {
        "required": {
          "type": "boolean"
        },
        "content": {
          "type": "object",
          "properties": {
            "application/json": {
              "$ref": "#/definitions/mediaType"
            }
          },
          "required": ["application/json"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "mediaType": {
      "type": "object",
      "required": ["schema"],
      "properties": {
        "schema": {
          "$ref": "#/definitions/jsonObjectSchema"
        }
      },
      "additionalProperties": true
    },
    "jsonObjectSchema": {
      "type": "object",
      "required": ["type", "properties"],
      "properties": {
        "type": {
          "const": "object"
        },
        "description": {
          "type": "string"
        },
        "properties": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": { "$ref": "#/definitions/propertySchema" }
        },
        "required": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        },
        "additionalProperties": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    },
    "propertySchema": {
      "type": "object",
      "required": ["type", "description"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "integer", "number", "boolean", "array", "object"]
        },
        "description": {
          "type": "string",
          "minLength": 5
        },
        "enum": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "minimum": { "type": "number" },
        "maximum": { "type": "number" },
        "minLength": { "type": "integer", "minimum": 0 },
        "maxLength": { "type": "integer", "minimum": 1 },
        "items": {
          "$ref": "#/definitions/propertySchema"
        },
        "properties": {
          "type": "object",
          "additionalProperties": { "$ref": "#/definitions/propertySchema" }
        },
        "required": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "additionalProperties": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "parameter": {
      "type": "object",
      "required": ["name", "in", "schema", "description"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "in": {
          "type": "string",
          "enum": ["query", "header", "path", "cookie"]
        },
        "required": {
          "type": "boolean"
        },
        "description": {
          "type": "string",
          "minLength": 5
        },
        "schema": {
          "$ref": "#/definitions/propertySchema"
        }
      },
      "additionalProperties": false
    }
  }
}
