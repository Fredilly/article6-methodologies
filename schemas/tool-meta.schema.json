{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "auth": {
      "additionalProperties": false,
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "none"
              }
            }
          },
          "then": {
            "not": {
              "anyOf": [
                {
                  "required": [
                    "authorization_type"
                  ]
                },
                {
                  "required": [
                    "location"
                  ]
                },
                {
                  "required": [
                    "scopes"
                  ]
                }
              ]
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "enum": [
                  "apiKey",
                  "http",
                  "service_http"
                ]
              }
            },
            "required": [
              "type"
            ]
          },
          "then": {
            "required": [
              "authorization_type"
            ]
          }
        }
      ],
      "properties": {
        "authorization_type": {
          "maxLength": 120,
          "type": "string"
        },
        "location": {
          "enum": [
            "header",
            "query",
            "cookie",
            "body"
          ],
          "type": "string"
        },
        "scopes": {
          "items": {
            "maxLength": 120,
            "minLength": 1,
            "type": "string"
          },
          "type": "array",
          "uniqueItems": true
        },
        "type": {
          "enum": [
            "none",
            "apiKey",
            "http",
            "oauth2",
            "service_http"
          ],
          "type": "string"
        }
      },
      "required": [
        "type"
      ],
      "type": "object"
    },
    "description": {
      "maxLength": 500,
      "minLength": 10,
      "type": "string"
    },
    "domain": {
      "maxLength": 120,
      "minLength": 3,
      "type": "string"
    },
    "id": {
      "pattern": "^[A-Za-z0-9.-]+@v\\d{2}-\\d+$",
      "type": "string"
    },
    "maintainer": {
      "additionalProperties": false,
      "properties": {
        "email": {
          "format": "email",
          "maxLength": 254,
          "type": "string"
        },
        "name": {
          "maxLength": 120,
          "minLength": 3,
          "type": "string"
        }
      },
      "required": [
        "name",
        "email"
      ],
      "type": "object"
    },
    "methodology_ids": {
      "items": {
        "minLength": 3,
        "pattern": "^[A-Za-z0-9.+-]+$",
        "type": "string"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "openapi": {
      "additionalProperties": false,
      "properties": {
        "path": {
          "pattern": "^(\\.\\.?/)?[A-Za-z0-9._\\-/]+\\.ya?ml$|^(\\.\\.?/)?[A-Za-z0-9._\\-/]+\\.json$",
          "type": "string"
        },
        "version": {
          "pattern": "^3\\.\\d+\\.\\d+$",
          "type": "string"
        }
      },
      "required": [
        "path",
        "version"
      ],
      "type": "object"
    },
    "operations": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "description": {
            "maxLength": 500,
            "minLength": 5,
            "type": "string"
          },
          "id": {
            "pattern": "^[a-z0-9._-]{1,64}$",
            "type": "string"
          },
          "method": {
            "enum": [
              "GET",
              "POST",
              "PUT",
              "PATCH",
              "DELETE",
              "OPTIONS",
              "HEAD"
            ],
            "type": "string"
          },
          "openapi_operation_id": {
            "pattern": "^[A-Za-z0-9._-]{1,128}$",
            "type": "string"
          },
          "path": {
            "pattern": "^/",
            "type": "string"
          },
          "summary": {
            "maxLength": 160,
            "minLength": 5,
            "type": "string"
          }
        },
        "required": [
          "id",
          "method",
          "path",
          "summary",
          "description",
          "openapi_operation_id"
        ],
        "type": "object"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "repo": {
      "additionalProperties": false,
      "properties": {
        "commit": {
          "pattern": "^[0-9a-fA-F]{7,40}$",
          "type": "string"
        },
        "path": {
          "minLength": 3,
          "type": "string"
        },
        "url": {
          "format": "uri",
          "type": "string"
        }
      },
      "required": [
        "url",
        "path",
        "commit"
      ],
      "type": "object"
    },
    "source": {
      "additionalProperties": false,
      "properties": {
        "type": {
          "maxLength": 120,
          "minLength": 2,
          "type": "string"
        },
        "url": {
          "format": "uri",
          "type": "string"
        }
      },
      "required": [
        "type",
        "url"
      ],
      "type": "object"
    },
    "title": {
      "maxLength": 120,
      "minLength": 5,
      "type": "string"
    }
  },
  "required": [
    "id",
    "title",
    "description",
    "methodology_ids",
    "domain",
    "maintainer",
    "source",
    "repo",
    "openapi",
    "auth",
    "operations"
  ],
  "title": "Tool META",
  "type": "object"
}
