{
  "name": "article6-methodologies",
  "workspaceFolder": "/workspaces/article6-methodologies",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "NODE_VERSION": "20"
    }
  },
  "runArgs": [
    "--init"
  ],
  "postCreateCommand": "git lfs install --system && git lfs install",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-vscode.git",
        "dbaeumer.vscode-eslint",
        "ms-vscode.node-debug2",
        "ms-vscode.cpptools"
      ]
    }
  }
}
