{
  "name": "article6-methodologies",
  "private": true,
  "devDependencies": {
    "ajv": "file:tools/vendor/npm/ajv-8.x.y.tgz",
    "ajv-cli": "file:tools/vendor/npm/ajv-cli-5.x.y.tgz",
    "ajv-formats": "file:tools/vendor/npm/ajv-formats-2.x.y.tgz"
  },
  "scripts": {
    "validate:meta": "scripts/require-vendor-ajv.sh && npx --no-install ajv validate -s schemas/META.schema.json -d 'methodologies/**/META.json'",
    "validate:sections": "scripts/require-vendor-ajv.sh && npx --no-install ajv validate -s schemas/sections.schema.json -d 'methodologies/**/sections.json'",
    "validate:rules": "scripts/require-vendor-ajv.sh && npx --no-install ajv validate -s schemas/rules.schema.json -d 'methodologies/**/rules.json'",
    "validate:all": "npm run validate:meta && npm run validate:sections && npm run validate:rules"
  }
}
